<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img006">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        tools:context=".OrderConfirmation" >

        <TextView

            android:id="@+id/displayUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:fontFamily="sans-serif"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/heading"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Order Confirmation "
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/displayUser"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="100dp"
            />

        <TextView

            android:id="@+id/picktext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pickup address "
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/heading"
            android:layout_marginTop="100dp"

            />

        <TextView

            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#e7e4e4"
            android:layout_below="@+id/heading"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@+id/picktext"
            android:text="@string/dumpyard_address"
            android:onClick="getLocation"
            />

        <TextView

            android:id="@+id/contacttext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Contact Person "
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/picktext"
            android:layout_marginTop="42dp"

            />

        <TextView

            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#e7e4e4"
            android:layout_below="@+id/address"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/contacttext"
            android:text="@string/contactPerson"

            />

        <Button

            android:id="@+id/logout"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contacttext"
            android:layout_marginTop="35dp"
            android:background="#BC8F8F"
            android:onClick="logout"
            android:text="Logout"
            android:layout_marginLeft="80dp"
            />


    </RelativeLayout>

</ScrollView>